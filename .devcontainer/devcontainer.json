{
  "name": "Python Flask & Jupyter Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-python.black"
      ]
    }
  },
  "postCreateCommand": "echo 'Container setup complete. Happy coding!'",
  "forwardPorts": [3000] // for Flask
}
